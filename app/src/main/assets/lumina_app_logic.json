{
  "app": {
    "name": "Lumina Virtual Studio",
    "version": "1.0.0",
    "namespace": "com.lumina.engine"
  },
  "ai": {
    "model": {
      "name": "qwen-2.5-1.5b-instruct",
      "file": "qwen-2.5-1.5b-instruct-q4_k_m.gguf",
      "context_length": 2048,
      "temperature": 0.1,
      "top_p": 0.9
    },
    "grammar_file": "qwen_grammar.gbnf"
  },
  "render_modes": [
    {
      "id": 0,
      "name": "passthrough",
      "display_name": "Original",
      "description": "No processing, display original camera feed"
    },
    {
      "id": 1,
      "name": "stylized",
      "display_name": "Stylized",
      "description": "Apply artistic style transfer"
    },
    {
      "id": 2,
      "name": "segmented",
      "display_name": "Segmented",
      "description": "Semantic segmentation overlay"
    },
    {
      "id": 3,
      "name": "depth_map",
      "display_name": "Depth Map",
      "description": "Display depth estimation"
    },
    {
      "id": 4,
      "name": "normal_map",
      "display_name": "Normal Map",
      "description": "Display surface normal estimation"
    }
  ],
  "effects": [
    {
      "id": 1,
      "name": "blur",
      "display_name": "Blur",
      "default_intensity": 0.5,
      "parameters": {
        "radius": {"type": "float", "min": 0, "max": 50, "default": 10}
      }
    },
    {
      "id": 2,
      "name": "bloom",
      "display_name": "Bloom",
      "default_intensity": 0.3,
      "parameters": {
        "threshold": {"type": "float", "min": 0, "max": 1, "default": 0.8},
        "intensity": {"type": "float", "min": 0, "max": 2, "default": 1.0}
      }
    },
    {
      "id": 3,
      "name": "color_grade",
      "display_name": "Color Grade",
      "default_intensity": 1.0,
      "parameters": {
        "saturation": {"type": "float", "min": 0, "max": 2, "default": 1.0},
        "contrast": {"type": "float", "min": 0, "max": 2, "default": 1.0},
        "brightness": {"type": "float", "min": -1, "max": 1, "default": 0.0}
      }
    },
    {
      "id": 4,
      "name": "vignette",
      "display_name": "Vignette",
      "default_intensity": 0.4,
      "parameters": {
        "radius": {"type": "float", "min": 0, "max": 1, "default": 0.5},
        "softness": {"type": "float", "min": 0, "max": 1, "default": 0.5}
      }
    },
    {
      "id": 5,
      "name": "chromatic_aberration",
      "display_name": "Chromatic Aberration",
      "default_intensity": 0.2,
      "parameters": {
        "offset": {"type": "float", "min": 0, "max": 20, "default": 5}
      }
    },
    {
      "id": 6,
      "name": "noise",
      "display_name": "Film Grain",
      "default_intensity": 0.15,
      "parameters": {
        "amount": {"type": "float", "min": 0, "max": 1, "default": 0.2}
      }
    },
    {
      "id": 7,
      "name": "sharpen",
      "display_name": "Sharpen",
      "default_intensity": 0.3,
      "parameters": {
        "amount": {"type": "float", "min": 0, "max": 2, "default": 0.5}
      }
    }
  ],
  "ui": {
    "glassmorphic": {
      "blur_radius": 20,
      "transparency": 0.7,
      "border_width": 1,
      "corner_radius": 16
    },
    "colors": {
      "primary": "#66D9FF",
      "secondary": "#7C4DFF",
      "tertiary": "#FF6B9D",
      "background_start": "#0D1B2A",
      "background_mid": "#1B263B",
      "background_end": "#415A77"
    }
  },
  "intents": {
    "keywords": {
      "render_mode": {
        "passthrough": ["normal", "original", "clear", "passthrough"],
        "stylized": ["stylize", "artistic", "style", "paint", "art"],
        "segmented": ["segment", "separate", "isolate", "mask"],
        "depth_map": ["depth", "3d", "distance", "far", "near"],
        "normal_map": ["normal", "surface", "bumps", "texture"]
      },
      "effects": {
        "blur": ["blur", "soft", "smooth", "fuzzy"],
        "bloom": ["bloom", "glow", "dreamy", "ethereal", "halo"],
        "color_grade": ["color", "grade", "tint", "warm", "cool", "vibrant"],
        "vignette": ["vignette", "border", "frame", "dark edges"],
        "chromatic_aberration": ["chromatic", "rgb split", "glitch", "aberration"],
        "noise": ["noise", "grain", "film", "vintage", "retro"],
        "sharpen": ["sharpen", "crisp", "detail", "enhance", "clarity"]
      },
      "controls": {
        "capture": ["capture", "screenshot", "photo", "snap", "picture"],
        "record_start": ["record", "start recording", "video"],
        "record_stop": ["stop", "end recording", "finish"],
        "reset": ["reset", "clear", "default", "remove all"],
        "help": ["help", "what can", "how to", "instructions"]
      }
    }
  }
}
